<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="_PiforatioColorsAndBrushes.xaml" />
        <ResourceDictionary Source="_PiforatioButtons.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--
        Styles Menu
    -->
    <Style x:Key="MenuButton_Style">
        <Setter Property="Button.Background" Value="{StaticResource Transperent_Brush}"/>
        <Setter Property="Button.BorderBrush" Value="{x:Null}"/>
        <Setter Property="Button.FontFamily" Value="/Piforatio.Win;component/#FontAwesome"/>
        <Setter Property="Button.FontSize" Value="16"/>
    </Style>

    <Style x:Key="MenuTopPanel_Style">
        <Setter Property="Button.Background" Value="{StaticResource Main_Brush}"/>
        <Setter Property="Button.BorderBrush" Value="{x:Null}"/>
    </Style>
    
    <Style x:Key="MenuNavBar_Style">
        <Setter Property="Button.Background" Value="{StaticResource MainLight3_Brush}"/>
        <Setter Property="Button.BorderBrush" Value="{x:Null}"/>
    </Style>
    
</ResourceDictionary>